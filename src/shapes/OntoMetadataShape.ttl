    sh:property [
        sh:path <https://w3id.org/mod#competencyQuestion> ;
        sh:severity sh:Info ;
        sh:xone (
         [sh:nodeKind sh:IRI ;]   
         [sh:datatype rdf:langString ;]
        );
        sh:message """
                The ontology does not provide information about its competency questions via IRI or as an rdf:langString.
                Recommended property: <https://w3id.org/mod#competencyQuestion>
                Example statement 1 (text/turtle): <https://www.purl.org/SomeOntology> <https://w3id.org/mod#competencyQuestion> \"Who developed an ontology?\"@en .
                Example statement 2 (text/turtle): <https://www.purl.org/SomeOntology> <https://w3id.org/mod#competencyQuestion> <https://www.purl.org/SomeOntology/CompetencyQuestions> .
                """@en ;
        sh:description "This shape checks whether the ontology provides competency questions as rdf:langString or an IRI to an online document. It produces an info message if it does not."@en ;
        sh:name "Competency questions"@en ;
    ];

