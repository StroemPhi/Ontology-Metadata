@base <http://www.purl.org/OntoMeta> .
@prefix ontom:    <http://www.purl.org/OntoMeta#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix vs: <http://www.w3.org/2003/06/sw-vocab-status/ns#> .
@prefix dash: <http://datashapes.org/dash#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix schema: <http://schema.org/> .
@prefix vann: <http://purl.org/vocab/vann/> .
@prefix mod: <https://w3id.org/mod#> .
@prefix cc: <http://creativecommons.org/ns#> .
@prefix dbo: <http://dbpedia.org/ontology/> .
@prefix pav: <http://purl.org/pav/> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix adms: <http://www.w3.org/ns/adms#> .
@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix premis: <http://www.loc.gov/premis/rdf/v3/> .
@prefix shacl: <http://www.w3.org/ns/shacl#> .

# I import SHACL so that we can look stuff up quickly locally
[rdf:type owl:Ontology ; owl:imports <http://www.w3.org/ns/shacl#> ] .

# Start of the Ontology Metadata Shape
ontom:OntologyMetadataShape a sh:NodeShape ;
    sh:targetClass owl:Ontology ; 
# MANDATORY METADATA
## G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.w5pmqfs8xiuv 

## Ontology title
### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.1exx8hu4osgx
    sh:property [              
        sh:path [sh:alternativePath (rdfs:label skos:prefLabel dc:title dcterms:title schema:name) ] ; 
        sh:minCount 1 ;
        sh:severity sh:Violation ;
        sh:message "The ontology does not specify its label or title or the title does not have a language tag."@en ;
        sh:nodeKind sh:Literal ;
        sh:datatype rdf:langString ;
        sh:description "The ontology must specify its label or title. The title must be an rdf:langString, i.e. carry a language tag."@en ;
        sh:name "Title"@en ; # this if for forms with DASH
        sh:order 1 ; # also for forms, order of fields
    ] ;

## Preferred prefix
### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.us2ezyzaf4h4
    sh:property [
        sh:path <http://purl.org/vocab/vann/preferredNamespacePrefix> ;
        sh:severity sh:Violation ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string ;
        sh:message "The ontology does not declare its preferred namespace prefix."@en ;
        sh:name "Preferred prefix"@en ; # this if for forms with DASH
        sh:description "The ontology must declare its preferred namespace prefix."@en ;
    ] ;

## Ontology acronym
### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.1iqmwa13y7u
    sh:property [
        sh:path <https://w3id.org/mod#acronym> ;
        sh:severity sh:Violation ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string ;
        sh:message "The ontology does not declare its preferred acronym."@en ;
        sh:name "Acronym"@en ; # this if for forms with DASH
        sh:description "The ontology must declare its preferred acronym."@en ;
    ] ;

## Ontology license
### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.d63b5oqb03v
### Der TS nimmt die Lizenz-IRI, aber gern auch ein Label - darüber hatten wir noch nicht gesprochen
    sh:property [
        sh:path [sh:alternativePath (dcterms:license dcterms:rights schema:license cc:license dbo:license)] ;
        sh:severity sh:Violation ;
        sh:minCount 1;
        # tbd/todo: specify a list of accepted licenses? e.g. from open definition
        sh:nodeKind sh:IRI ;
        sh:message "The ontology does not specify its license by providing an IRI for the license. The license must be open."@en ;
        sh:name "License"@en ; # this if for forms with DASH
        sh:description "The ontology must specify its license by providing an IRI for the license. The license must be open."@en ;
    ] ;

## Ontology creator
### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.uc5cfjvqg7cv
### Über regex-Prüfungen könnte man hier auch bestimmte Identifier enforcen
    sh:property [
        sh:path  [sh:alternativePath (dc:creator dcterms:creator schema:creator pav:createdBy prov:wasAttributedTo)];
        sh:severity sh:Violation ;
        sh:minCount 1;
        sh:nodeKind sh:IRI;
        sh:message "The ontology does not state its creator. We recommend to provide PIDs for individuals (e.g. ORCiD) or organisations (e.g. ROR)."@en ;
        sh:name "Creator(s)"@en ; # this if for forms with DASH
        sh:description "The ontology must state its creator. We recommend to provide PIDs for individuals (e.g. ORCiD) or organisations (e.g. ROR)."@en ;
    ] ;

## Version information
### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.88o633ocogle
### Version IRI
#### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.5o62yvmk2eo1
    sh:property [
        sh:path  owl:versionIRI ;
        sh:severity sh:Violation ;
        sh:nodeKind sh:IRI;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "The ontology does not state a versionIRI. The versionIRI must be stable and resolvable."@en ;
        sh:name "Version IRI"@en ; # this if for forms with DASH
        sh:description "The ontology must state a stable, resolvable versionIRI."@en ;
    ] ;

### Creation date
#### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.7i4grrp5qlng
    sh:property [
        sh:path [sh:alternativePath (dcterms:created schema:dateCreated pav:createdOn dcterms:issued dcterms:date schema:datePublished prov:generatedAtTime schema:dateIssued)] ;
        sh:severity sh:Violation ;
        sh:minCount 1;
        sh:maxCount 1 ;
        sh:datatype xsd:dateTime ;
        sh:message "The ontology does not specify its date of creation in xsd:dateTime format."@en ;
        sh:name "Creation date"@en ; # this if for forms with DASH
        sh:description "The ontology must specify its date of creation in xsd:dateTime format."@en ;
    ] ;

### Modification date
#### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.i101l8f9ynz8
    sh:property [
        sh:path [sh:alternativePath (dcterms:modified schema:dateModified pav:curatedOn)];
        sh:severity sh:Violation ;
        sh:minCount 1;  # tbd: aktuell nur mincount, weil mir auch schon Voks begegnet sind, die etliche modification dates reinschreiben
        sh:datatype xsd:dateTime ;
        sh:message "The ontology does not specify its last modification date in xsd:dateTime format."@en ;
        sh:name "Modification date"@en ; # this if for forms with DASH
        sh:description "The ontology must specify its last modification date in xsd:dateTime format."@en ;
    ] ;

### Textual version information
### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.i101l8f9ynz8
    sh:property [
        sh:path [sh:alternativePath (owl:versionInfo pav:version)];
        sh:severity sh:Violation ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string ;
        sh:message "The ontology does not specify information about its version. We recommend semantic versioning(?) or latest modification/relase date (?)."@en ; # tbd
        sh:name "Version information"@en ; # this if for forms with DASH
        sh:description "The ontology must(?) specify information about its version. We recommend semantic versioning(?) or latest modification/relase date (?)."@en ; #tbd
    ] ;

### Version notes
### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.txaafvbvbrys
    sh:property [
        sh:path [sh:alternativePath (adms:versionNotes vann:changes)]  ;
        sh:severity sh:Violation ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:Literal ; 
        sh:datatype rdf:langString ;
        sh:message "The ontology does not describe which updates have been made to the current ontology version compared to its preceeding version."@en ; # tbd
        sh:description "The ontology must(?) describe which updates have been made to the current ontology version compared to its preceeding version."@en ; # tbd
        sh:name "Version notes"@en ; # this if for forms with DASH
    ] ;

## Ontology description
### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.bfn4i6l0oqot
    sh:property [
        sh:path [sh:alternativePath (dc:description dcterms:description schema:description)] ;
        sh:severity sh:Violation ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:maxLength 500 ; #tbd Wir haben Ontologien mit sehr viel längeren Beschreibungen... Aber das könnte man auch in ein ausführliches Abstract schieben.
        sh:nodeKind sh:Literal ;
        sh:datatype rdf:langString ;
        sh:message "The ontology does provide a short description about its scope or the description is too long (500 characters)."@en ;
        sh:description "The ontology must provide a short description about its scope (max. 500 characters)."@en ;
        sh:name "Description"@en ; # this if for forms with DASH
    ] ;

## Issue tracker
### G-Doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.2wupy319ar5t
    sh:property [
        sh:path <http://usefulinc.com/ns/doap#bug-database> ;
        sh:severity sh:Violation ;
        sh:nodeKind sh:IRI ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "The ontology does not specify an IRI to a location where bugs and suggestions can be reported, ideally an *open* issue tracker at GitHub or GitLab or the like."@en ;
        sh:description "The ontology must specify an IRI to a location where bugs and suggestions can be reported, ideally an *open* issue tracker at GitHub or GitLab or the like."@en ;
        sh:name "Issue tracker"@en ; # this if for forms with DASH
    ] ;

## Ontology documentation
### G-doc https://docs.google.com/document/d/1FRmCQ7eD6PcqSQgPbqCGjki3t39ROoYozsehCPX9E0Q/edit#bookmark=id.5fr9vwijs9cj
    sh:property [
        sh:path  <http://www.loc.gov/premis/rdf/v3/documentation> ;
        sh:severity sh:Violation ;
        sh:nodeKind sh:IRI ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "The ontology does not specify an IRI to its documentation."@en ;
        sh:description "The ontology must specify an IRI to its documentation."@en ;
        sh:name "Documentation"@en ; # this if for forms with DASH
    ] ;

# RECOMMENDED METADATA

    sh:property [
        sh:path dcterms:abstract ;
        sh:severity sh:Warning ;
        sh:minCount 0;
        sh:datatype rdf:langString ;
        sh:nodeKind sh:Literal ;
        sh:message "The ontology does not have an abstract."@en ;
        sh:description "The ontology should have an abstract."@en ;
        sh:name "Abstract"@en ; # this if for forms with DASH
    ] ;
    sh:property [
        sh:path dcterms:issued ;
        sh:severity sh:Warning ;
        sh:minCount 1;
        sh:datatype xsd:dateTime ;
        sh:message "The ontology does not have an issued date or the date does not conform to xsd:dateTime."@en ;
        sh:description "The ontology should have an issued date that conforms to xsd:dateTime."@en ;
        sh:name "Date issued"@en ; # this if for forms with DASH
    ] ;
    sh:property [
        sh:path [sh:alternativePath (dcterms:language <https://schema.org/inLanguage>) ];
        sh:severity sh:Warning ;
        sh:datatype xsd:language ;
        sh:minCount 1 ;
        sh:message "The ontology does not specifiy which natural language it covers in annotations or the language is not typed as xsd:language."@en ;
        sh:description "The ontology should specifiy which natural languages its annotations have. The language values should be typed as xsd:language."@en ;
        sh:name "Language(s)"@en ; # this if for forms with DASH
    ] ;
    sh:property [
        sh:path dcterms:subject ;
        sh:severity sh:Warning ;
        sh:minCount 1 ;
        sh:nodeKind sh:IRI ;
        sh:message "The ontology does not specify which subjects it has. Use identifiers of controlled vocabularies to do so. You can search for fitting terms on TIB's Terminology service (https://terminology.tib.eu)."@en ;
        sh:description "The ontology should specify which subjects it has, by using identifiers of controlled vocabularies. You can search for fitting terms on TIB's Terminology service (https://terminology.tib.eu)."@en ;
        sh:name "Subject(s)"@en ; # this if for forms with DASH
    ] ;
    sh:property [
        sh:path dcterms:type ;
        sh:severity sh:Warning ;
        sh:minCount 1 ;
        sh:nodeKind sh:IRI ;
        sh:message "The ontology does not declare its type. Please pick a type from the NKOS type vocabulary and refer to it via its identifier."@en ;
        sh:description "The ontology should declare its type by referring to one of the entities in the NKOS type vocabulary (https://nkos.dublincore.org/nkostype/nkostype.rdf) via its IRI."@en ;
        sh:name "KOS type"@en ; # this if for forms with DASH
    ] ;
    sh:property [
        sh:path <http://purl.org/vocab/vann/preferredNamespaceUri> ;
        sh:severity sh:Warning ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:IRI ;
        sh:message "The ontology does not declare its preferred namespace URI."@en ;
        sh:description "The ontology should declare its preferred namespace URI."@en ;
        sh:name "Preferred Namespace"@en ; # this if for forms with DASH
    ] ;
    sh:closed false ;
    sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty ) .
